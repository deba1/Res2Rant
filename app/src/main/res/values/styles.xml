<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.ButtonSmall" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <style name="AppTheme.ButtonStrip.Middle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:textColor">#1A237E</item>
        <item name="android:background">@drawable/bg_button_stripe_middle</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="AppTheme.ButtonStrip.First" parent="AppTheme.ButtonStrip.Middle">
        <item name="android:background">@drawable/bg_button_stripe_first</item>
    </style>

    <style name="AppTheme.ButtonStrip.Last" parent="AppTheme.ButtonStrip.Middle">
        <item name="android:background">@drawable/bg_button_stripe_last</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>